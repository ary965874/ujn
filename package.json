{
  "name": "telegram-bot-single-file",
  "version": "1.0.0",
  "description": "Single-file bulletproof Telegram bot server",
  "main": "server.ts",
  "scripts": {
    "dev": "tsx watch server.ts",
    "start": "tsx server.ts",
    "build": "tsc server.ts --outDir dist",
    "bun:dev": "bun --watch server.ts",
    "bun:start": "bun server.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
